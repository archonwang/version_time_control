<% content_for :header_tags do %>
    <%= stylesheet_link_tag 'vtc', :plugin => 'version_time_control' %>
<% end %>
<h2>Avancement des contrats de maintenance</h2>
<% if @liste %>
<table>
  <tr>
    <th><%=h l(:label_project) %> - <%=h l(:label_version) %> </th>
    <th><%=h l(:label_spent_time) %> </th>
    <th><%=h l(:label_expected_time) %> </th>
    <th><%=h l(:label_progression) %> </th>
  </tr>
  <% @liste.each do |version| %>
      <tr>
        <td class="version_name"><%= version[:projectname] %> - <a href="/redmine/versions/<%= version[:version] %>"><%= version[:name] %></a></td>
        <td class="version_time"><%= version[:spent_time]%> <%=h l(:label_hours) %></td>
        <td class="version_estimated"><%= version[:estimaed_time]%> <%=h l(:label_hours) %></td>
        <td>
          <table class="version_progress progress progress-0" style="width: 40em;">
            <tbody>
            <tr>
              <% if version[:percent] >= 100 %>
                  <td class="max" style="width:100%"></td>
              <% else %>
                  <td class="done" style="width:<%= version[:percentrnd]%>%"></td>
              <% end %>

              <% if version[:percenttofinish] <= 0 %>
                  <td class="todo" style="width:0%"></td>
              <% else %>
                  <td class="todo" style="width:<%= version[:percenttofinish]%>%"></td>
              <% end %>
            </tr>
            </tbody>
          </table>
          <% if version[:percent] > 100 %>
              ! + de 100%
          <% else %>
              <%= version[:percentrnd]%>%
          <% end %>
        </td>
      </tr>
      <hr>
  <% end %>
</table>
<% end %>

<% if @message %>
    <p><%=h l(:label_configuration) %> <a href="/redmine/settings/plugin/version_time_control"><%=h l(:label_configuration_link) %></a></p>
<% end %>
